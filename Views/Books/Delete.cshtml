@model BookCatalog.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <div class="card shadow-sm border-0" style="background-color: #fffdf9;">
        <div class="card-header text-center" style="background-color: #5d3a00; color: #f5e3c0; font-family: 'Playfair Display', serif;">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <p class="lead text-center text-danger mb-4">
                Are you sure you want to delete this book? This action cannot be undone.
            </p>

            <div class="row align-items-center">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <img src="@Model.CoverImageUrl"
                         onerror="this.onerror=null;this.src='/images/fallback.jpg';"
                         alt="Book Cover"
                         class="img-fluid rounded shadow-sm"
                         style="max-height: 300px; object-fit: cover;" />
                </div>
                <div class="col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Title</dd>

                        <dt class="col-sm-4">Author</dt>
                        <dd class="col-sm-8">@Model.Author</dd>

                        <dt class="col-sm-4">Genre</dt>
                        <dd class="col-sm-8">
                            <span class="badge @BookCatalog.Helpers.GenreStyleHelper.GetGenreBadgeClass(Model.Genre)">
                                @Model.Genre
                            </span>
                        </dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">$@Model.Price</dd>
                    </dl>
                </div>
            </div>

            <hr class="my-4" />

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>